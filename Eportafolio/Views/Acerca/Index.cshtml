@model IEnumerable<Eportafolio.Models.Acerca>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:white; font-size:50px;">Acerca</h2>


<div class="text-center">
    <img src="~/Content/Imagenes/perfil.jpg" class="rounded" style="width: 250px; height: 350px;" />
</div>

@if (User.Identity.IsAuthenticated)
{
    @* Opciones para menu administrativo*@
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}




<table class="table" style="color:white; font-size:25px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Acerca1)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Acerca1)
            </td>

            @if (User.Identity.IsAuthenticated)
            {
                @* Opciones para menu administrativo*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
            }

            
        </tr>
    }

</table>
